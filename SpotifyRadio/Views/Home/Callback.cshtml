<script>
    window.onload = function () {
      var hash = window.location.hash;
      if (window.location.search.substring(1).indexOf("error") !== -1) {
          $scope.loggedin = true;
          $scope.username = "test";
          //window.close();
      } else if (hash) {
        var token = window.location.hash.split('&')[0].split('=')[1];
        localStorage.setItem('spotify-token', token);
        $scope.loggedin = true;
        $scope.username = "test";
      }
    }
</script>